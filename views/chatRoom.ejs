  <body>

    <div class="limiter">
      <div class="container-login100">
        <div class="wrap-login100">
          <div class="container">
        
          <div id="msgArea" class="row">
              <div class="col-md-4">
                      <div class="well">
                          <h3>Online users</h3>
                          <ul class="list-group" id="users"></ul> 
                      </div>
              </div>
              <div class="col-md-8">
                  <div class="chat" id="chat"></div>
  
                 <form id="messageForm">
                  <div class="form-group">
                      <textarea name="" id="message" class="form-control" placeholder="Type a message"></textarea><br>
                      <input type="submit" class="btn btn-primary" value="Send"/>
